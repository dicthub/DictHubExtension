{
  "manifest_version": 2,
  "name": "DictHub",
  "author": "DictHub",
  "version": "1.0.2",

  "description": "__MSG_appDesc__",
  "homepage_url": "https://github.com/dicthub",
  "icons": {
    "32": "ico/dicthub-32.png",
    "48": "ico/dicthub-48.png",
    "96": "ico/dicthub-96.png"
  },

  "browser_action": {
    "default_icon": "ico/dicthub-32.png",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "browser_style": false,
    "open_in_tab": true,
    "page": "options.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Send a 'toggle-feature' event to the extension"
    }
  },
  "default_locale": "en",

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com https://ssl.google-analytics.com; object-src 'self'",

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "contextMenus",
    "\u003Call_urls>"
  ],

  "web_accessible_resources": [
    "overlay.html",
    "sandbox.html",
    "lib/*",
    "js/*",
    "css/*",
    "ico/*",
    "img/*"
  ],
  "background": {
    "scripts": ["js/backgroundContextMenus.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/injectContextMenu.js"]
    }
  ]
}